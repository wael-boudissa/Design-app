<?xml version="1.0" encoding="utf-8"?><androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="wrap_content"    android:layout_height="wrap_content"    android:layout_margin="10dp"    app:cardCornerRadius="10dp">    <LinearLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:background="@color/white"        android:gravity="center"        android:orientation="vertical"        android:padding="10dp">        <ImageView            android:id="@+id/image_directory"            android:layout_width="50dp"            android:layout_height="50dp"            android:layout_margin="10dp"            android:src="@drawable/directory_image"            android:contentDescription="TODO" />        <TextView            android:id="@+id/name_directory"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="@string/directory_name"            android:textColor="@color/black"            android:textStyle="bold" />    </LinearLayout></androidx.cardview.widget.CardView>